#!/bin/bash

in=${!##\\input } # ${!#} is the last argument
job="$(basename -s.jam "$in")"
out="$job.pdf"
pdfjam="./pdfjam --build-dir '$job.d' --outfile '$out' --preamble '"'\input{regression-test.tex}\AtBeginDocument{\START}'\'
if [[ "${in%.sh.jam}" = "${in}" ]]; then
	eval "$pdfjam $(< "$in")"
else
	source "$in"
fi
awk '/^ *\[[0-9]*$/{ORS=""} /\]/{ORS="\n"} /^END-TEST-LOG$/ {system("pdfinfo '"$out"'")} //' \
	<"$job.d/a.log" >"$job.log"
